<section class="hero is-primary">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Shelf
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <% @shelves.each do |shelf| %>
        <div class="column is-4">
          <div class="card">
            <div class="card-image">
              <figure class="image is-96x128">
                <%= link_to shelf_path(shelf) do %>
                  <%= attachment_image_tag shelf, :image %>
                <% end %>
              </figure>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-left">
                  <figure class="image is-48x48">
                    <%= attachment_image_tag shelf.user, :profile_image, fallback: "IMG_3498.PNG", class: "profile_image" %>
                  </figure>
                </div>
                <div class="media-content">
                  <div class="title"><%= link_to shelf.user.username, user_path(shelf.user) %></div>
                </div>
              </div>
              <div class="content">
                <time><%= shelf.updated_at.strftime("%Y-%m-%d %H:%M") %></time>更新
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>





